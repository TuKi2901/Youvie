<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movie_Management_Project.Content.User.Play"
             xmlns:local="clr-namespace:Movie_Management_Project.Content.Admin"
             Title="Play">
    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>

            <WebView x:Name="wvFilm" Source="https://www.youtube.com/embed/FxJ3zPUU6Y4" HeightRequest="656" WidthRequest="1200" Margin="0,20,0,0"/>

            <CollectionView x:Name="cvEpisode"
                            ItemsSource="{Binding Items}"
                            Margin="0,0,0,50"
                            HorizontalOptions="Center">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="8" VerticalItemSpacing="10" HorizontalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="gridEpisode"
                                RowDefinitions="Auto"
                                ColumnDefinitions="Auto"
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalOptions="Center">
                            <Button Text="{Binding Name}" Grid.Row="0" Grid.Column="0" Padding="30,0" HorizontalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame x:Name="frameContent"
                    BackgroundColor="Transparent" Margin="50">
                <Grid x:Name="gridContent"
                      ColumnDefinitions="600,600" RowDefinitions="Auto, Auto, Auto"
                      HorizontalOptions="Center" RowSpacing="20">

                    <Grid x:Name="gridNameAndCategory"
                          Grid.ColumnSpan="2"
                          ColumnDefinitions="600,600"
                          RowDefinitions="Auto"
                          RowSpacing="10">
                        <Label x:Name="lbNameFilm" 
                               Grid.Column="0" Grid.Row="0"
                               Text="Attack on Titan"
                               FontSize="Medium"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="Start"/>

                        <CollectionView x:Name="cvCategory"
                                        ItemsSource="{Binding Items4}"
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        HorizontalOptions="End">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="5" HorizontalItemSpacing="10"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="gridCategory"
                                          ColumnDefinitions="Auto"
                                          RowDefinitions="Auto">
                                        <Label x:Name="lbCategory"
                                               Text="Category" 
                                               Grid.Row="0" Grid.Column="0"  
                                               FontSize="Small"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>


                    </Grid>

                    <CollectionView x:Name="cvSideInfo"
                                    ItemsSource="{Binding Items1}"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    HorizontalOptions="Start">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>

                                <Grid x:Name="gridSideInfo"
                                      RowDefinitions="Auto,Auto"
                                      ColumnDefinitions="Auto,Auto,Auto"
                                      ColumnSpacing="50">
                                    <Label x:Name="lbReleaseDate"
                                               Grid.Row="0" Grid.Column="0"
                                               Text="10/11/2077"
                                               FontSize="Small"
                                               LineBreakMode="WordWrap"/>
                                    <Label x:Name="lbCountry"
                                               Grid.Row="0" Grid.Column="1"
                                               Text="Nhat Ban"
                                               FontSize="Small"
                                               LineBreakMode="WordWrap"/>
                                    <Label x:Name="lbEpisodeNumber"
                                               Grid.Row="0" Grid.Column="2"
                                               Text="0/100"
                                               FontSize="Small"
                                               LineBreakMode="WordWrap"/>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>




                    </CollectionView>

                    <Grid x:Name="gridDescription"
                          HorizontalOptions="Center"
                          Grid.ColumnSpan="2"
                          Grid.Row="2">

                        <Label x:Name="lbDescription"
                               Text="CollectionView can present a header and footer that scroll with the items in the list. The header and footer can be strings, views, or DataTemplate objects.

                                     CollectionView defines the following properties for specifying the header and footer:

                                     Header, of type object, specifies the string, binding, or view that will be displayed at the start of the list.
                                     HeaderTemplate, of type DataTemplate, specifies the DataTemplate to use to format the Header.
                                     Footer, of type object, specifies the string, binding, or view that will be displayed at the end of the list.
                                     FooterTemplate, of type DataTemplate, specifies the DataTemplate to use to format the Footer.
                                     These properties are backed by BindableProperty objects, which means that the properties can be targets of data bindings.

                                     When a header is added to a layout that grows horizontally, from left to right, the header is displayed to the left of the list. Similarly, when a footer is added to a layout that grows horizontally, from left to right, the footer is displayed to the right of the list."
                               LineBreakMode="WordWrap"
                               FontSize="Small"/>
                    </Grid>

                </Grid>
            </Frame>

            <Frame x:Name="frameComment"
                Background="Transparent" Margin="0,0,0,50"  WidthRequest="1250" HorizontalOptions="Center">


                <CollectionView x:Name="cvCommentUser"
                                    ItemsSource="{Binding Items}"
                                    Margin="0,0,0,50"
                                    HorizontalOptions="Start"
                                    Grid.Column="0" Grid.Row="0">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="gridComment"
                                      ColumnDefinitions="Auto, *"
                                      RowDefinitions="Auto"
                                      HorizontalOptions="Center"
                                      ColumnSpacing="50">
                                <Grid x:Name="gridUserComment"
                                      ColumnDefinitions="Auto"
                                      RowDefinitions="Auto,Auto"
                                      HorizontalOptions="Center">
                                    <Image x:Name="imgUser"
                                               Source="dotnet_bot.png" HeightRequest="50"
                                               Grid.Column="0" Grid.Row="0"
                                               HorizontalOptions="Center"/>
                                    <Label x:Name="lbUser"
                                               Text="{Binding Name}"
                                               HorizontalOptions="Start"
                                               Grid.Column="0"
                                               Grid.Row="1"
                                               FontSize="Small"/>
                                </Grid>

                                <Frame Grid.Row="0" Grid.Column="1" 
                                       Margin="0,0,0,30">
                                    <Label x:Name="lbComment"
                                               Text="CommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommenCommentsssssCommentssssss Commentssssss Commentssssss Commentssssss v Commentssssss CommentsssCommentssssss Commentssssss Commentssssss CommentssssssCommentssssss CommentssssssCommentssssssssss"
                                               FontSize="Small"
                                               LineBreakMode="WordWrap"/>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>